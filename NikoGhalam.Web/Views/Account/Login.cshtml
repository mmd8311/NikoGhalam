<section class="section-b-space pt-0 login-section">
    <div class="custom-container container">
        <div class="row align-items-center">
            <div class="col-xxl-4 col-lg-6">
                <div class="log-in-box">
                    <div class="log-in-title">
                        <h4>به نیکو قلم خوش آمدید</h4>
                        <p>حساب خود را ثبت کنید</p>
                    </div>
                    <div class="login-box">
                        <form id="loginForm" class="row g-3">
                            <div class="col-12" id="mobile-box">
                                <div class="form-floating">
                                    <input class="form-control" id="txtMobile" type="text" placeholder="شماره تلفن" value="">
                                    <label for="txtMobile">شماره تلفن خود را وارد کنید</label>
                                </div>
                            </div>
                            <div class="col-12" id="otp-box" style="display: none;">
                                <div class="form-floating">
                                    <input class="form-control" id="txtOtpCode" type="text" placeholder="کد تایید" value="">
                                    <label for="txtOtpCode">کد تایید را وارد کنید</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button id="btn_getCode" class="btn login btn_black sm" type="button">دریافت کد</button>
                                <button id="btn_signIn" class="btn login btn_black sm" type="button" style="display: none;">ورود</button>
                                <button id="btn_newGetCode" class="btn login btn_black sm" type="button" style="display: none;">ارسال مجدد کد</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xxl-7 col-lg-6 d-none d-lg-block">
                <!-- این بخش برای نمایش تصویر در سمت راست -->
            </div>
        </div>
    </div>
</section>


